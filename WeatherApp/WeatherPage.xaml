<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WeatherPage">
    <StackLayout Padding="20">
        <Entry x:Name="CityEntry" Placeholder="Enter city name" FontSize="16" />
        <Button Text="Get Weather" Clicked="OnGetWeatherClicked" FontSize="16" />
        <Label x:Name="WeatherInfoLabel" Text="" FontSize="14" TextColor="Black" />
    </StackLayout>
</ContentPage>
